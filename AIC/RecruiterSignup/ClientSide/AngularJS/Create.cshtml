
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}
@section stylesheets{
    <style>
        body {
            background-image: url("https://source.unsplash.com/1600x900");
        }

        .panel {
            margin-top: 10px;
        }

        div.panel-heading {
            background-color: #62b757;
        }

        .hov:hover {
            background-color: #62b757;
            color: white;
        }

        .panel-bodyTitle {
            text-align: center;
        }

        .panel-title {
            text-align: center;
            /*background-color:#62b757;*/
        }

        .form-control {
            margin-bottom: 10px;
        }
    </style>
}
<div class="container">
    <div class="container col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Become a Recruiter</h3>

            </div>
            <div class="panel-body" ng-controller="recruiterController as RecruiterCtrl">
                <div class="accordion-section">
                    <p ng-hide="RecruiterCtrl.payload.recruiterType == 'corporate' || RecruiterCtrl.payload.recruiterType == 'staffing'" class="panel-bodyTitle">Verifying your role as a Recruiter is easy, please fill out the form below to continue</p>
                    <p ng-show="RecruiterCtrl.payload.recruiterType == 'corporate' || RecruiterCtrl.payload.recruiterType == 'staffing'" class="panel-bodyTitle">Tell us more about your company</p>
                    <form name="postJobForm" ng-submit="RecruiterCtrl.submit(postJobForm.$valid)" novalidate>
                        <div class="form-group col-md-12">
                            <ng-form name="recruiterForm">
                                <div class="col-md-push-2 col-md-8" ng-hide="!recruiterForm.$pristine">
                                    <label for="recruiterType"> Please Select A Recruiter Type: </label><br>
                                    <select name="recruiterType" class="form-control" ng-model="RecruiterCtrl.payload.recruiterType">
                                        <option value="">---Please select---</option>
                                        <option ng-value="'corporate'">Corporate Recruiter</option>
                                        <option ng-value="'staffing'">Staffing Recruiter</option>
                                    </select><br>
                                </div>
                            </ng-form>
                            <ng-form name="businessInfoOne" ng-show="RecruiterCtrl.showBusinessInfoOne  && (RecruiterCtrl.payload.recruiterType == 'corporate' || RecruiterCtrl.payload.recruiterType == 'staffing')">
                                <div class="row col-md-8 col-md-push-2" ng-class="{'has-error' : businessInfoOne.companyName.$invalid && !businessInfoOne.companyName.$pristine }">
                                    <label for="companyName">Company</label>
                                    <input type="text" ng-model="RecruiterCtrl.payload.companyName" name="companyName" class="form-control" placeholder="Company Name" maxlength="50" required />
                                </div>
                                <div class="row col-md-8 col-md-push-2" ng-class="{'has-error' : businessInfoOne.companyDesc.$invalid && !businessInfoOne.companyDesc.$pristine }">
                                    <label for="companyDesc">Description</label>
                                    <textarea name="companyDesc" ng-model="RecruiterCtrl.payload.companyDescription" class="form-control" rows="3" placeholder="Company Description" maxlength="100" required></textarea>
                                </div>
                                <div class="row col-md-8 col-md-push-2" ng-class="{'has-error' : businessInfoOne.companyAddress1.$invalid && !businessInfoOne.companyAddress1.$pristine }">
                                    <label for="companyAddress">Address Line 1</label>
                                    <input type="text" ng-keyup="RecruiterCtrl.cityLookUp()" ng-model="RecruiterCtrl.payload.companyAddress1" name="companyAddress1" class="form-control" maxlength="100" placeholder="Street address, P.O. box, company name, c/o" required />
                                </div>
                                <div class="row col-md-8 col-md-push-2">
                                    <label for="companyAddress">Address Line 2</label>
                                    <input type="text" ng-model="RecruiterCtrl.payload.companyAddress2" name="companyAddress2" class="form-control" maxlength="100" placeholder="Apartment, suite , unit, building, floor, etc." />
                                </div>
                                <div class="row col-md-8 col-md-push-2" ng-class="{'has-error' : businessInfoOne.country.$invalid && !businessInfoOne.country.$pristine }">
                                    <label for="country"> Country: </label><br>
                                    <select name="country" class="form-control" ng-model="RecruiterCtrl.payload.country" required>
                                        <option value="">---Please select---</option>
                                        <option ng-value="1">USA</option>
                                        <option ng-value="2">Other</option>
                                    </select><br>
                                </div>
                                <div class="row col-md-8 col-md-push-2" ng-class="{'has-error' : businessInfoOne.companyState.$invalid && !businessInfoOne.companyState.$pristine }">
                                    <label for="companyState">State: </label><br>
                                    <select name="companyState" class="form-control" required ng-model="RecruiterCtrl.payload.companyState">
                                        <option value="AL">Alabama</option>
                                        <option value="AK">Alaska</option>
                                        <option value="AZ">Arizona</option>
                                        <option value="AR">Arkansas</option>
                                        <option value="CA">California</option>
                                        <option value="CO">Colorado</option>
                                        <option value="CT">Connecticut</option>
                                        <option value="DE">Delaware</option>
                                        <option value="DC">District Of Columbia</option>
                                        <option value="FL">Florida</option>
                                        <option value="GA">Georgia</option>
                                        <option value="HI">Hawaii</option>
                                        <option value="ID">Idaho</option>
                                        <option value="IL">Illinois</option>
                                        <option value="IN">Indiana</option>
                                        <option value="IA">Iowa</option>
                                        <option value="KS">Kansas</option>
                                        <option value="KY">Kentucky</option>
                                        <option value="LA">Louisiana</option>
                                        <option value="ME">Maine</option>
                                        <option value="MD">Maryland</option>
                                        <option value="MA">Massachusetts</option>
                                        <option value="MI">Michigan</option>
                                        <option value="MN">Minnesota</option>
                                        <option value="MS">Mississippi</option>
                                        <option value="MO">Missouri</option>
                                        <option value="MT">Montana</option>
                                        <option value="NE">Nebraska</option>
                                        <option value="NV">Nevada</option>
                                        <option value="NH">New Hampshire</option>
                                        <option value="NJ">New Jersey</option>
                                        <option value="NM">New Mexico</option>
                                        <option value="NY">New York</option>
                                        <option value="NC">North Carolina</option>
                                        <option value="ND">North Dakota</option>
                                        <option value="OH">Ohio</option>
                                        <option value="OK">Oklahoma</option>
                                        <option value="OR">Oregon</option>
                                        <option value="PA">Pennsylvania</option>
                                        <option value="RI">Rhode Island</option>
                                        <option value="SC">South Carolina</option>
                                        <option value="SD">South Dakota</option>
                                        <option value="TN">Tennessee</option>
                                        <option value="TX">Texas</option>
                                        <option value="UT">Utah</option>
                                        <option value="VT">Vermont</option>
                                        <option value="VA">Virginia</option>
                                        <option value="WA">Washington</option>
                                        <option value="WV">West Virginia</option>
                                        <option value="WI">Wisconsin</option>
                                        <option value="WY">Wyoming</option>
                                    </select>
                                </div>
                                <div class="row col-md-8 col-md-push-2" ng-class="{'has-error' : businessInfoOne.companyCity.$invalid && !businessInfoOne.companyCity.$pristine }">
                                    <label for="companyCity">City</label>
                                    <input name="companyCity" ng-model="RecruiterCtrl.payload.companyCity" type="text" class="form-control" maxlength="100" placeholder="Company City" required>
                                </div>
                                <div class="row col-md-8 col-md-push-2" ng-class="{'has-error' : businessInfoOne.companyZip.$invalid && !businessInfoOne.companyZip.$pristine }">
                                    <label for="companyZip">Zip Code</label>
                                    <input name="companyZip" ng-pattern="onlyNumbers" ng-model="RecruiterCtrl.payload.companyZip" type="text" class="form-control" maxlength="5" placeholder="Company Zip Code" min="5" restrict-to="[0-9]" required>
                                </div>
                            </ng-form>
                            <ng-form name="businessInfoTwo" ng-show="RecruiterCtrl.showBusinessInfoTwo">
                                <div class="row col-md-8 col-md-push-2">
                                    <label>Phone</label>
                                    <div class="form-control">
                                        <span ng-hide="RecruiterCtrl.payload.country == '1'">Country Code:<input ng-model="RecruiterCtrl.payload.countryCode" min="0" restrict-to="[0-9]" type=tel size=4 maxlength="4"></span> Phone Number:<input min="0" restrict-to="[0-9]" ng-model="RecruiterCtrl.payload.phoneNumber" type=tel size=10 maxlength="10" required> Extension: <input min="0" restrict-to="[0-9]" ng-model="RecruiterCtrl.payload.extension" type=tel size=5 maxlength="5">
                                    </div>
                                </div>
                                <div class="row col-md-8 col-md-push-2" ng-class="{'has-error' : businessInfoTwo.phoneType.$invalid && !businessInfoTwo.phoneType.$pristine }">
                                    <label for="phoneType"> Please Select A Phone Type: </label><br>
                                    <select name="phoneType" class="form-control" ng-model="RecruiterCtrl.payload.phoneType" required>
                                        <option value="">---Please select---</option>
                                        <option ng-value="1">Home</option>
                                        <option ng-value="2">Mobile</option>
                                        <option ng-value="3">Work</option>
                                        <option ng-value="4">Fax</option>
                                        <option ng-value="5">Other</option>
                                    </select><br>
                                </div>
                                <div class="row col-md-8 col-md-push-2" ng-class="{'has-error' : businessInfoTwo.companyWebsite.$invalid && !businessInfoTwo.companyWebsite.$pristine }">
                                    <label for="companyWebsite">Website</label>
                                    <input type="text" ng-pattern='RecruiterCtrl.regex' ng-model="RecruiterCtrl.payload.companyWebsite" name="companyWebsite" maxlength="100" class="form-control" placeholder="Company Website" required />
                                </div>
                                <div class="row col-md-8 col-md-push-2">
                                    <label for="companyLogo">Company Logo</label>
                                    <input type="file" name="companyLogo" id="companyLogo" class="form-control" required />
                                    <small>Image must be less than 4mb</small>
                                </div>
                                <div class="row col-md-8 col-md-push-2" ng-class="{'has-error' : businessInfoTwo.companyEmail.$invalid && !businessInfoTwo.companyEmail.$pristine }">
                                    <label for="companyEmail">Email</label>
                                    <input type="text" ng-pattern='/^(([^<>()\[\]\\.,;:\s@('@')"]+(\.[^<>()\[\]\\.,;:\s@('@')"]+)*)|(".+"))@('@')((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/' ng-model="RecruiterCtrl.payload.companyEmail" name="companyEmail" maxlength="256" class="form-control" placeholder="Company Email" required />
                                </div>
                            </ng-form>
                        </div>
                        <input ng-show="postJobForm.$valid" type="submit" class="btn btn-cta-primary" value="Submit" ng-disabled="RecruiterCtrl.buttonDisable == 1">
                        <button type="button" ng-show="!postJobForm.$pristine" ng-click="RecruiterCtrl.resetForms(postJobForm)" class="btn btn-cta-secondary" ng-disabled="RecruiterCtrl.buttonDisable == 1">Clear All</button>
                        <input type="button" class="btn btn-cta-primary" ng-hide="!businessInfoOne.$valid || RecruiterCtrl.showBusinessInfoOne == false" ng-show="businessInfoOne.$valid" ng-click="RecruiterCtrl.toggleForms()" value="Next" ng-disabled="RecruiterCtrl.buttonDisable == 1">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/aic/core/services/aic.services.recruiter.js"></script>
	<script src="~/Scripts/aic/core/controller/aic.controller.recruiter.js"></script>
    <script src="~/Scripts/aic/core/directives/aic.directive.numberOnly.js"></script>
    <script src="~/Scripts/aic/aic.services.fileUpload.js"></script>
}
